$catalog QMArrayList global
class QMArrayList

    private array(1), size
    
    public sub create.object()
        size = 0
    end
    
    public sub add(obj)
        size += 1
        redim array(size)
        array(size) = obj
    end
    
    public function contains(obj)
        for i = 1 to size
            if (array(i)->same(obj)) then return @true
        next i
        return @false
    end
    
    public function indexOf(obj)
        for i = 1 to size
            if (array(i)->same(obj)) then return i
        next i
        return 0
    end
    
    public function getSize()
        return size
    end
    
    public function get(index)
        if (index <= size) then
            return array(i)
        end
        return ''
    end
    
    public sub remove(obj)
        ind = me->indexOf(obj)
        if (ind > 0) then
            for i = ind+1 to size 
                array(i-1) = array(i)
            next i
            array(size) = ''
            size -= 1
        end
    end

end
