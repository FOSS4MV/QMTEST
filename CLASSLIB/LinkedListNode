$catalog LinkedListNode local
class LinkedListNode

    private value, nextPtr
    
    public sub create.object(newValue='') var.args
        if (objinfo(newValue, 0)) then
            value = newValue
        end else if (newValue # '') then
            value = newValue
        end
        nextPtr = ''
    end
    
    **
    * getters/setters
    **
    
    get getValue()
        return value
    end
    
    set setValue(newValue)
        value = newValue
    end
    
    get getNext()
        return nextPtr
    end
    
    set setNext(ptr)
        if (objinfo(ptr, 0)) then
            if (objinfo(ptr, 1) = "LINKEDLISTNODE") then
                nextPtr = ptr
            end
            throw "InvalidNodeType", objinfo(ptr, 1)
        end
        throw "InvalidNodeType", ptr
    end

end
