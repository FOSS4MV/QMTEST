$catalog testAnnotations local
class testAnnotations inherits QMTest

    *BeforeClass
    public sub doThisOnlyOnceAtTheBeginning()
        crt "@BeforeClass"
    end
    
    *AfterClass
    public sub doThisOnlyOnceAtTheEnd()
        crt "@AfterClass"
    end
    
    *Before
    public sub doThisBeforeEachTest()
        crt "@Before"
    end
    
    *After
    public sub doThisAfterEachTest()
        crt "@After"
    end
    
    *Test
    public sub test1()
        crt "test1!"
    end
    
    *Ignore
    *Test
    public sub test2()
        me->test2out()
    end
    
    public sub test2out()
        crt "test2"
    end
    
    *Skip
    *Test
    public sub test3()
        crt "test3"
    end
    
    *ExpectedException=TestException
    *Test
    public sub test4()
        crt "test4"
        throw "TestException", "This best get consumed as it is expected to happen."
    end

end
